{% extends "/layout/base.html.twig" %}

{% block main %}

    <div class="d-flex flex-column align-items-center mt-5">
        <div class="card col-8 my-2">
            <div class="card-body">
                <div class="d-flex flex-row align-items-center">
                    <img src="/img/user/{{ post.avatar }}" class="me-3">
                    <div class="d-flex flex-column justify-content-center">
                        <p class="mb-0">Auteur : {{ post.firstname }} {{ post.lastname|slice(0, 1) }}</p>
                        <p class="mb-0">Posté le : {{ post.createdAt|date("d/m/Y") }}
                            à {{ post.createdAt|date("H:i", "Europe/Paris") }}</p>
                        <p class="mb-0">Catégorie : {{ post.name }}</p>
                    </div>
                </div>
                <hr>
                <p class="h5">{{ post.title }}</p>
                <div class="d-flex justify-content-between">
                    <p class="d-flex align-items-center">{{ post.content }}</p>
                    <div>
                        {% if post.image is not null %}
                            <img class="img-post" src="/img/post/{{ post.image }}">
                        {% endif %}
                    </div>
                </div>
                <hr>
                {% if user.user_id == post.userId or user.level > 60 %}
                    <a href="/Post/deletePost/{{ post.id }}" class="text-decoration-none">
                        <span class="material-symbols-outlined text-danger">delete</span>
                    </a>
                    {% if post.publishedAt is null %}
                        <a href="/Post/publishedPost/{{ post.id }}">
                            <span class="material-symbols-outlined text-success">done</span>
                        </a>
                    {% endif %}
                {% endif %}
                {% if user.user_id == post.userId %}
                    <a href="/Post/updatePost/{{ post.id }}">
                        <span class="material-symbols-outlined">edit</span>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="d-flex flex-column align-items-center mt-5">
        <p class="h3">Commentaires</p>
    </div>

    <div class="d-flex flex-column align-items-center mt-5">
        <div class="card col-8 my-2">
            <div class="card-body">
                {{ form | raw }}
            </div>
        </div>
    </div>

    {% for comment in comments %}
        <div class="d-flex flex-column align-items-center mt-5">
            <div class="card col-8 my-2">
                <div class="card-body">
                    <div class="d-flex flex-row align-items-center">
                        <img src="/img/user/{{ comment.avatar }}.png" class="me-3">
                        <div class="d-flex flex-column justify-content-center">
                            <p class="mb-0">{{ comment.firstname }} {{ comment.lastname|slice(0, 1) }}</p>
                            <p class="mb-0">Posté le : {{ comment.createdAt|date("d/m/Y") }}
                                à {{ comment.createdAt|date("H:i", "Europe/Paris") }}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <p class="d-flex align-items-center">{{ comment.content }}</p>
                    </div>
                    <hr>
                    {% if user.user_id == comment.userId or user.level > 60 %}
                        <a href="/Comment/deleteComment/{{ comment.id }}" class="text-decoration-none">
                            <span class="material-symbols-outlined text-danger">delete</span>
                        </a>
                        {% if comment.validatedAt is null %}
                            <a href="/Comment/publishedComment/{{ comment.id }}">
                                <span class="material-symbols-outlined text-success">done</span>
                            </a>
                        {% endif %}
                    {% endif %}
                    {% if user.user_id == comment.userId %}
                        <a href="/Comment/updateComment/{{ comment.id }}">
                            <span class="material-symbols-outlined text-success">edit</span>
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}