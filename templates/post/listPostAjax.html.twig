{% for post in posts %}
    <div class="card col-8 my-2 cursor-click" onclick="onePost({{ post.id }})">
        <div class="card-body">
            <div class="d-flex flex-row align-items-center">
                <img src="/img/user/{{ post.avatar }}.png" class="me-3">
                <div class="d-flex flex-column justify-content-center">
                    <p class="mb-0">{{ post.firstname }} {{ post.lastname|slice(0, 1) }}</p>
                    <p class="mb-0">Posté le : {{ post.createdAt|date("d/m/Y") }}
                        à {{ post.createdAt|date("H:i", "Europe/Paris") }}</p>
                </div>
            </div>
            <hr>
            <div class="d-flex justify-content-between">
                <p class="d-flex align-items-center">{{ post.content }}</p>
                <div>
                    {% if post.image is not null %}
                        <img class="imgPost" src="/img/post/{{ post.image }}">
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="row">
        Aucun post actuellement
    </div>
{% endfor %}