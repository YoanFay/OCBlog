{% extends "/layout/base.html.twig" %}


{% block main %}
    <div class="card">
<div class="card-body">
    {{ form | raw}}
    <p id="errorImage" class="d-none text-danger mt-2 mb-0">Le fichier doit Ãªtre dans l'un des format suivant : .jpeg, .jpg ou .png</p>
</div>
    </div>
{% endblock %}

{% block script%}
    <script>
        $("#formImage").change(function () {
            var fileExtension = ['jpeg', 'jpg', 'png'];
            if ($.inArray($(this).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
                $('#formSubmit').addClass('disabled');
                $('#errorImage').removeClass('d-none');
            }else{
                $('#formSubmit').removeClass('disabled');
                $('#errorImage').addClass('d-none');
            }
        });
    </script>
{% endblock %}