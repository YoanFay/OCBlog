{% extends "/layout/base.html.twig" %}

{% block main %}

    <div class="d-flex flex-column align-items-center mt-5">
        {% for post in posts %}
        <div class="card col-8 my-2 cursor-click" onclick="onePost({{ post.id }})">
            <div class="card-body">
                    <div class="row">
                        {{post.content}}
                        <hr>
                        <div class="d-flex flex-row-reverse">
                            Posté le : {{ post.created_at|date("d/m/Y") }} à {{ post.created_at|date("H:i", "Europe/Paris") }}
                        </div>
                    </div>
            </div>
        </div>
        {% else %}
            <div class="row">
                Aucun post en attente de modération actuellement
            </div>
        {% endfor %}
    </div>

{% endblock %}

{% block script %}

    <script>
        function onePost(id){
            window.location = "/Post/onePost/" + id;
        }
    </script>

{% endblock %}