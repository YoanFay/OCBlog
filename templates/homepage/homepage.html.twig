{% extends "/layout/base.html.twig" %}

{% block header %}
    <div class="d-flex flex-row justify-content-center col-12 mt-2">
        <div class="col-3 d-flex flex-row-reverse">
            <img class="rounded-circle" width="50%" src="img/config/{{ image }}">
        </div>
        <div class="col-4 d-flex justify-content-center flex-column ms-2">
            <h1>{{ title }}</h1>
            <h2 class="h4">{{ catch_phrase }}</h2>
        </div>
    </div>
{% endblock %}

{% block main %}

    <div class="d-flex flex-column align-items-center mt-5">
        {% for post in posts %}
            <div class="card col-8 my-2 cursor-click" onclick="onePost({{ post.id }})">
                <div class="card-body">
                    <div class="row">
                        {{ post.content }}
                        <hr>
                        <div class="d-flex flex-row-reverse">
                            Posté le : {{ post.createdAt|date("d/m/Y") }}
                            à {{ post.createdAt|date("H:i", "Europe/Paris") }}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="row">
                Aucun post actuellement
            </div>
        {% endfor %}
    </div>

{% endblock %}

{% block script %}

    <script>
        function onePost(id) {
            window.location = "/Post/onePost/" + id;
        }
    </script>

{% endblock %}